<Window x:Class="HostManager.Views.Menu.SettingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HostManager.Views.Menu"
        xmlns:appSettings="clr-namespace:HostManager.Properties"
        mc:Ignorable="d"
        Title="속성" Height="300" Width="300" Icon="/HostManager;component/Resources/Sign_Icon.ico" ShowInTaskbar="False" ResizeMode="NoResize" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="30"></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0">
            <GroupBox Header="Host 적용 시 실행중인 브라우저 자동 닫고 열기">
                <StackPanel>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="80"></ColumnDefinition>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <CheckBox Grid.Column="0" Content="IE 계열"/>
                        <CheckBox Grid.Column="1" Content="캐시 및 쿠기 삭제하기" IsEnabled="False" Foreground="Gray"/>
                    </Grid>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="80"></ColumnDefinition>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <CheckBox Grid.Column="0" Content="Edge"/>
                        <CheckBox Grid.Column="1" Content="Edge" IsEnabled="False" Foreground="Gray"/>
                    </Grid>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="80"></ColumnDefinition>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <CheckBox Grid.Column="0" Content="Chrome"/>
                        <CheckBox Grid.Column="1" Content="Chrome" IsEnabled="False" Foreground="Gray"/>
                    </Grid>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="80"></ColumnDefinition>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <CheckBox Grid.Column="0" Content="Firefox"/>
                        <CheckBox Grid.Column="1" Content="Firefox" IsEnabled="False" Foreground="Gray"/>
                    </Grid>
                </StackPanel>
            </GroupBox>
            <GroupBox Header="Host 적용 시 캐시 및 쿠키 삭제하기">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" >
                        <CheckBox Content="IE 계열"/>
                        <CheckBox Content="Edge" IsEnabled="False" Foreground="Gray"/>
                        <CheckBox Content="Chrome" IsEnabled="False" Foreground="Gray"/>
                        <CheckBox Content="Firefox" IsEnabled="False" Foreground="Gray"/>
                    </StackPanel>
                </StackPanel>
            </GroupBox>
            <GroupBox Header="Host 경로 강제로 설정하기">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" >
                        <TextBox></TextBox>
                    </StackPanel>
                </StackPanel>
            </GroupBox>
        </StackPanel>
        <StackPanel Grid.Row="1" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" >
            <Button Margin="0,0,20,0">적용</Button>
            <Button>취소</Button>
        </StackPanel>
    </Grid>
</Window>
