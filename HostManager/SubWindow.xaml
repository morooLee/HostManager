<Window x:Class="HostManager.SubWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HostManager"
        mc:Ignorable="d"
        Title="SubWindow" Height="100" Width="Auto" ResizeMode="NoResize" Top="0" ShowInTaskbar="False" WindowStyle="None" Topmost="True" AllowsTransparency="True" Background="Transparent" Opacity="{Binding Value, ElementName=slider}" Left="0">
    <Grid>
        <Border BorderThickness="1" BorderBrush="Aqua">
            <Grid>
                <TextBlock></TextBlock>
                <Slider x:Name="slider" Height="20" Maximum="1" Minimum="0.5" TickFrequency="0.2" Value="0.9"/>
            </Grid>
        </Border>
    </Grid>
</Window>
