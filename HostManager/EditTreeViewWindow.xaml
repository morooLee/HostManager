<Window x:Class="HostManager.EditTreeViewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HostManager"
        xmlns:src="clr-namespace:HostManager.Models"
        mc:Ignorable="d"
        Height="300" Width="300" Icon="Resources/Sign_Icon.ico" ShowInTaskbar="False" ResizeMode="NoResize" Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="30"></RowDefinition>
        </Grid.RowDefinitions>
        <TabControl Grid.Row="0">
            <TabItem Name="TextTabItem" Header="텍스트로 작성하기">
                <TabItem.Content>
                    <DockPanel>
                        <StackPanel DockPanel.Dock="Top" Margin="0, 5, 0, 5" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right">
                            <Button Background="White" Foreground="#31708F" BorderThickness="0" Margin="0, 0, 45, 0" Click="Button_Click">
                                <Button.ToolTip>
                                    <StackPanel>
                                        <TextBlock Text="#{{항목명     #도움말"></TextBlock>
                                        <TextBlock Text="#127.0.0.1     LocalHost   #도움말"></TextBlock>
                                        <TextBlock Text="#}}"></TextBlock>
                                    </StackPanel>
                                </Button.ToolTip>
                                <Button.Content>
                                    <StackPanel Orientation="Horizontal">
                                        <Image Source="Resources/Help.png" Width="18"/>
                                        <TextBlock Text="도움말 보기" FontSize="10" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button.Content>
                            </Button>
                            <Button Name="RichTextBoxClearButton" Margin="0, 0, 10, 0" Click="RichTextBoxClearButton_Click">모두 지우기</Button>
                            <Button Name="RichTextBoxAddButton" Margin="0, 0, 2, 0" Click="RichTextBoxAddButton_Click">항목 추가하기</Button>
                        </StackPanel>
                        <TextBox Name="DirectEditTextBox" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" AcceptsTab="True" AcceptsReturn="True" TextWrapping="NoWrap"></TextBox>
                    </DockPanel>
                </TabItem.Content>
            </TabItem>
            <TabItem Name="ControlsTabItem" Header="항목별로 작성하기">
                <TabItem.Content>
                    <StackPanel>
                        <StackPanel.Resources>
                            <Style x:Key="CategoryIsEnabledStyle" TargetType="StackPanel">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsChecked, ElementName=CategoryRadioButton}" Value="false">
                                        <Setter Property="IsEnabled" Value="False"/>
                                        <Setter Property="Opacity" Value="0.5"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                            <Style x:Key="HostIsEnabledStyle" TargetType="StackPanel">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsChecked, ElementName=HostRadioButton}" Value="false">
                                        <Setter Property="IsEnabled" Value="False"/>
                                        <Setter Property="Opacity" Value="0.5"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </StackPanel.Resources>

                        <GroupBox Margin="0, 5, 0, 5">
                            <GroupBox.Header>
                                <RadioButton x:Name="CategoryRadioButton" GroupName="EditTreeView" BorderBrush="Black" FontWeight="Bold">
                                    <RadioButton.Content>
                                        <TextBlock>카테고리</TextBlock>
                                    </RadioButton.Content>
                                </RadioButton>
                            </GroupBox.Header>
                            <StackPanel Style="{StaticResource CategoryIsEnabledStyle}">
                                <StackPanel Margin="5" Orientation="Horizontal">
                                    <TextBlock Width="50" Text="항목명"></TextBlock>
                                    <TextBox Name="CategoryNameTextBox" Width="200"></TextBox>
                                </StackPanel>
                                <StackPanel Margin="5" Orientation="Horizontal">
                                    <TextBlock Width="50" Text="도움말"></TextBlock>
                                    <TextBox Name="CategoryTooltipTextBox" Width="200"></TextBox>
                                </StackPanel>
                            </StackPanel>
                        </GroupBox>
                        <GroupBox Margin="0, 5, 0, 5">
                            <GroupBox.Header>
                                <RadioButton x:Name="HostRadioButton" GroupName="EditTreeView" BorderBrush="Black" FontWeight="Bold">
                                    <RadioButton.Content>
                                        <TextBlock>호스트</TextBlock>
                                    </RadioButton.Content>
                                </RadioButton>
                            </GroupBox.Header>
                            <StackPanel Style="{StaticResource HostIsEnabledStyle}">
                                <StackPanel Margin="5" Orientation="Horizontal">
                                    <TextBlock Width="50" Text="IP"></TextBlock>
                                    <TextBox Name="HostIPTextBox" Width="200"></TextBox>
                                </StackPanel>
                                <StackPanel Margin="5" Orientation="Horizontal">
                                    <TextBlock Width="50" Text="도메인"></TextBlock>
                                    <TextBox Name="HostDomainTextBox" Width="200"></TextBox>
                                </StackPanel>
                                <StackPanel Margin="5" Orientation="Horizontal">
                                    <TextBlock Width="50" Text="도움말"></TextBlock>
                                    <TextBox Name="HostTooltipTextBox" Width="200"></TextBox>
                                </StackPanel>
                            </StackPanel>
                        </GroupBox>
                    </StackPanel>
                </TabItem.Content>
            </TabItem>
        </TabControl>
        <StackPanel Grid.Row="1" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" >
            <Button Name="EditNodeApplyButton" Margin="0,0,20,0" Click="EditNodeApplyButton_Click">적용</Button>
            <Button Name="EditNodeCancelButton" Click="EditNodeCancelButton_Click">취소</Button>
        </StackPanel>
    </Grid>
</Window>
